---
import Sidebar from "../components/Sidebar.astro";
const { title } = Astro.props;
---

<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width" />
    <meta name="generator" content={Astro.generator} />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <link
      rel="stylesheet"
      href="https://fonts.googleapis.com/css?family=Shippori+Mincho"
    />
    <link
      rel="stylesheet"
      href="https://fonts.googleapis.com/css?family=Cedarville+Cursive"
    />
    <link
      rel="stylesheet"
      href="https://fonts.googleapis.com/css?family=Cormorant+Garamond"
    />
    <title>{title}</title>
    <script>
      if (
        localStorage.theme === "dark" ||
        (!("theme" in localStorage) &&
          window.matchMedia("(prefers-color-scheme: dark)").matches)
      ) {
        document.documentElement.classList.add("dark");
      } else {
        document.documentElement.classList.remove("dark");
      }
    </script>
  </head>
  <body class="bg-light text-dark w-screen h-screen">
    <main class="flex flex-row h-full px-[25%] gap-20 overflow-auto">
      <Sidebar />
      <slot />
    </main>
  </body>
</html>
