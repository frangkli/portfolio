---
import "../styles/global.css";
import { Sidebar } from "../components/Sidebar";
const {
  title,
  description = "Frank Li (Ang Li) - Computer Science student at UW, Software Engineer at Amazon",
} = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="apple-touch-icon" sizes="180x180" href="/apple-touch-icon.png" />
    <link rel="icon" type="image/png" sizes="32x32" href="/favicon-32x32.png" />
    <link rel="icon" type="image/png" sizes="16x16" href="/favicon-16x16.png" />
    <link rel="sitemap" href="/sitemap-index.xml" />
    <meta name="generator" content={Astro.generator} />

    <!-- Primary Meta Tags -->
    <title>{title}</title>
    <meta name="title" content={title} />
    <meta name="description" content={description} />
    <meta
      name="keywords"
      content="Frank Li, Ang Li, frangkli, Software Engineer, Amazon, University of Washington, Computer Science"
    />
    <meta name="author" content="Frank Li" />

    <!-- Open Graph / Facebook -->
    <meta property="og:type" content="website" />
    <meta property="og:url" content={Astro.url} />
    <meta property="og:title" content={title} />
    <meta property="og:description" content={description} />
    <meta property="og:image" content="/apple-touch-icon.png" />

    <!-- Twitter -->
    <meta property="twitter:card" content="summary_large_image" />
    <meta property="twitter:url" content={Astro.url} />
    <meta property="twitter:title" content={title} />
    <meta property="twitter:description" content={description} />
    <meta property="twitter:image" content="/apple-touch-icon.png" />

    <!-- Canonical URL -->
    <link rel="canonical" href={Astro.url} />

    <!-- Structured Data -->
    <script type="application/ld+json" is:inline>
      {
        "@context": "https://schema.org",
        "@type": "Person",
        "name": "Frank Li",
        "alternateName": ["Ang Li", "frangkli"],
        "url": "https://www.frangkli.com",
        "jobTitle": "Software Engineer",
        "worksFor": {
          "@type": "Organization",
          "name": "Amazon"
        },
        "alumniOf": {
          "@type": "Organization",
          "name": "University of Washington"
        },
        "sameAs": ["https://github.com/frangkli"]
      }
    </script>
  </head>
  <body class="bg-light dark:bg-dark min-h-dvh dark:text-light">
    <div
      class="mx-12 md:mx-auto max-w-screen-lg min-h-screen flex flex-col md:flex-row gap-12 md:gap-16 py-10 md:py-32"
    >
      <Sidebar />
      <main class="grow">
        <slot />
      </main>
    </div>
  </body>
</html>
